<apex:page showHeader="false" sidebar="false" docType="html-5.0">
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background: #f5f7fb;
        }
        .hero {
            background: linear-gradient(135deg, #6a11cb, #2575fc);
            color: white;
            padding: 60px 20px;
            text-align: center;
        }
        .hero h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }
        .hero p {
            font-size: 18px;
            max-width: 700px;
            margin: auto;
        }
        .container {
            padding: 40px;
            max-width: 1000px;
            margin: auto;
        }
        .features {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
        }
        .card {
            background: white;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            text-align: center;
        }
        .card h3 {
            color: #333;
        }
        .cta {
            text-align: center;
            margin-top: 40px;
        }
        .cta a {
            background: #2575fc;
            color: white;
            padding: 14px 30px;
            text-decoration: none;
            border-radius: 6px;
            font-size: 18px;
        }
        .cta a:hover {
            background: #1a5fd0;
        }
    </style>

    <!-- Hero Section -->
    <div class="hero">
        <h1>Fabric Nation</h1>
        <p>Premium quality fabrics crafted for comfort, durability, and modern fashion needs.</p>
    </div>

    <!-- Content -->
    <div class="container">
        <div class="features">
            <div class="card">
                <h3>Premium Fabrics</h3>
                <p>High-quality cotton, linen, and blended fabrics sourced responsibly.</p>
            </div>
            <div class="card">
                <h3>Eco Friendly</h3>
                <p>Sustainable manufacturing with minimal environmental impact.</p>
            </div>
            <div class="card">
                <h3>Trusted by Brands</h3>
                <p>Supplying fabrics to leading fashion and textile brands.</p>
            </div>
        </div>

        <!-- Call To Action -->
        <div class="cta">
            <a href="/w2l">Enquire Now</a>
        </div>
    </div>
</apex:page>