<apex:page showHeader="false" sidebar="false" docType="html-5.0">
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #1cc88a, #4e73df);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }
        .thankyou-card {
            background: white;
            padding: 40px;
            border-radius: 12px;
            text-align: center;
            width: 420px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
        .thankyou-card h1 {
            color: #1cc88a;
            margin-bottom: 10px;
        }
        .thankyou-card p {
            color: #555;
            font-size: 16px;
            margin-bottom: 25px;
        }
        .thankyou-card a {
            display: inline-block;
            text-decoration: none;
            background: #4e73df;
            color: white;
            padding: 12px 25px;
            border-radius: 6px;
            font-size: 16px;
        }
        .thankyou-card a:hover {
            background: #2e59d9;
        }
    </style>

    <div class="thankyou-card">
    <img style="width: 50%;" src="{!URLFOR($Resource.thankYou)}" />
        <p>
            Thank you for showing interest in <b>Fabric Nation</b>.<br/>
            Our team will contact you shortly.
        </p>
    </div>
</apex:page>